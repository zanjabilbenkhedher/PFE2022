<odoo>
    <data>

        <!-- explicit kanban view definition -->
        <record model="ir.ui.view" id="facture_kanban_view">
            <field name="name">Invoice list</field>
            <field name="model">facture.fact</field>
            <field name="arch" type="xml">

                <kanban sample="1"  >
                    <field name="name_seq"/>
                    <field name="last_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                        <div style="height:350px"  class="o_kanban_img" >
                                            <field  name="display_facture_image" widget="image"/>
                                        </div>
                                        <div style="margin-top:150px" class="oe_kanban_details">
                                        <ul>
                                        <li style="display:block ;color:#7C7BAD ; font-size:20px ; margin-bottom:10px" class="fa fa-file" >
                                             <strong>Invoice Num:
                                                 <field class="infoColor" name="name_seq"/></strong>
                                        </li>
                                        <li style="display:block ;color:black ; font-size:20px ; margin-bottom:10px"  class="fa fa-clock-o">
                                             Last-create:
                                        <field class="infoColor" name="last_date" />
                                        </li>

                                    </ul>
                            </div>

                                </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="facture_list_view">
            <field name="name">Invoice list</field>
            <field name="model">facture.fact</field>
            <field name="arch" type="xml">

                <tree sample="1">
                    <field name="name_seq"/>
                    <field name="last_date"/>
                </tree>

            </field>
        </record>
        <!-- explicit form view definition -->
