<odoo>
    <data>

        <!-- explicit kanban view definition -->
        <record model="ir.ui.view" id="facture_kanban_view">
            <field name="name">Invoice list</field>
            <field name="model">facture.fact</field>
            <field name="arch" type="xml">

                <kanban sample="1">
                    <field name="name_seq"/>
                    <field name="name_facture"/>
                    <field name="last_date"/>
                    <field name="fournisseur"/>
                    <field name="vat"/>
                    <field name="adresse"/>
                    <field name="billDate"/>
                    <field name="dueDate"/>
                    <field name="reference"/>
                    <field name="iban"/>
                    <field name="currency"/>
                    <field name="montantT"/>
                    <field name="lines"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            Code:
                                            <field name="name_seq"/>
                                        </li>
                                        <li>
                                            Fournisseur:
                                            <field name="fournisseur"/>
                                        </li>
                                        <li>
                                            Total :
                                            <field name="montantT"/>
                                        </li>
                                    </ul>

                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="facture_list_view">
            <field name="name">Invoice list</field>
            <field name="model">facture.fact</field>
            <field name="arch" type="xml">

                <tree sample="1">
                    <field name="name_seq"/>
                    <field name="name_facture"/>
                    <field name="last_date"/>
                    <field name="fournisseur"/>
                    <field name="vat"/>
                    <field name="adresse"/>
                    <field name="billDate"/>
                    <field name="dueDate"/>
                    <field name="reference"/>
                    <field name="iban"/>
                    <field name="currency"/>
                    <field name="montantT"/>
                    <field name="lines"/>
                </tree>

            </field>
        </record>
        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="facture_form_view">
            <field name="name">Invoice list</field>
            <field name="model">facture.fact</field>
            <field name="arch" type="xml">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_facture" type="object" class="oe_stat_button" icon="fa-calendar">
                            <div class="o_stat_info">
                                <!--                                <field name="print_facture" class="o_stat_value"/>-->
                                <span class="o_stat_text">Invoice</span>

                            </div>
                        </button>
                        <button name="action_open_facture" type="object" class="oe_stat_button" icon="fa-calendar">
                            <div class="o_stat_info">
                                <!--                                <field name="print_facture" class="o_stat_value"/>-->
                                <span class="o_stat_text">Child</span>

                            </div>
                        </button>

                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq"/>
                        </h1>
                    </div>

                    <group>
                        <widget name="template_testjs"/>
                    </group>
                    <group style="margin-top:10px">
                        <group>
                            <field name="name_seq"/>
                            <field name="name_facture"/>
                        </group>
                        <group>
                            <field name="fournisseur"/>
                            <field name="vat"/>
                        </group>
                        <group>
                            <field name="adresse"/>
                            <field name="billDate"/>
                        </group>
                        <group>
                            <field name="dueDate"/>
                            <field name="reference"/>
                        </group>
                        <group>
                            <field name="iban"/>
                            <field name="currency"/>
                        </group>
                        <group>
                            <field name="montantT"/>
                            <field name="lines"/>
                        </group>

                        <!-- <field name="details_id"/>-->
                    </group>
                    <field style="display:none" name="model_id"/>
                    <field style="display:none" name="child_ids"/>

                    <field style="display:none" name="codeZoning" widget="image"/>
                    <field style="display:none" name="detaille"/>
                    <field style="display: none" name="test"/>
                    <field style="display: none" name="imageCode" type="text"/>
                    <form>
                        <!--                        <notebook>-->
                        <!--                            <page string="Crop Details" name="crop-details">-->
                        <!--                                <field context="{'default_model_id':model_id}" name="detail_ids">-->
                        <!--                                    <tree editable="top">-->
                        <!--                                        <field name="x"/>-->
                        <!--                                        <field name="y"/>-->
                        <!--                                        <field name="height"/>-->
                        <!--                                        <field name="width"/>-->
                        <!--                                        <field name="model_id"/>-->
                        <!--                                        <field domain="[('model_id', '=' ,model_id)]" name="field_id"/>-->
                        <!--                                    </tree>-->
                        <!--                                </field>-->
                        <!--                            </page>-->
                        <!--                            <page string="Other Info" name="other-info">-->
                        <!--                                <group>-->
                        <!--                                    <field name="OtherInfo"/>-->
                        <!--                                </group>-->
                        <!--                            </page>-->
                        <!--                        </notebook>-->
                    </form>
                </sheet>
                <form>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="fact_action_window">
            <field name="name">Invoice window</field>
            <field name="res_model">facture.fact</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('parent_id','=',False)]</field>

        </record>
        <record model="ir.actions.act_window" id="fact_action_window_child">
            <field name="name">Invoice window Child</field>
            <field name="res_model">facture.fact</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('parent_id','!=',False)]</field>

        </record>


    </data>
</odoo>