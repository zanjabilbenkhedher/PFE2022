<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_testjs" xml:space="preserve">
    <t t-name="template_testjs">
        <div>
             <input style="color:white" name="imageCode" id="imageodoo" class="imageodoo" type="file"/>
